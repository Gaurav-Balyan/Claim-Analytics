.kt-portlet .kt-portlet__head {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    position: relative;
    padding: 0 7px;
    border-bottom: 1px solid #ebedf2;
    min-height: 60px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
    margin-bottom: 0.5rem;
    font-weight: 550;
    line-height: 1.2;
    margin-top: 0.5rem; 
}

.head-border {border-bottom: 1px solid #d7d7d7;
padding-bottom: 8px; }

.fontW {font-weight: 550 !important;}


*::-webkit-scrollbar,
*::-webkit-scrollbar-thumb {
  width: 26px;
  border-radius: 13px;
  background-clip: padding-box;
  border: 10px solid transparent;
}

*::-webkit-scrollbar-thumb {        
  box-shadow: inset 0 0 0 10px;
}

.as_table:hover {
  color: rgba(0, 0, 0, 0.3);
}

.as_table {
  background: white;
  height: 150px;
  overflow:scroll;
  color: rgba(0, 0, 0, 0);
  text-shadow: 0 0 black;
  transition: color .3s ease;
  color: #48465b;
}

.as_table table {
    color: #48465b;
   
  }

  .as_table .table .thead-light th {
    color: #ffffff;
    background-color: #6e6e6e;
    border-color: #ffffff;
    padding-top: 3px !important;
    padding-bottom: 3px !important;
}
.severity-slider {
  -webkit-appearance: none;
  width: 100%;
  height: 3px;
  background: #000;
  outline: none;
  opacity: 0.7;
  -webkit-transition: .2s;
  transition: opacity .2s;
}
  
.mat-slider-horizontal {
  height: 48px;
  min-width:100%;
}